#!/bin/bash

RED='\033[0;31m'
B_RED='\033[1;31m'
GREEN='\033[0;32m'
B_GREEN='\033[1;32m'
YELLOW='\033[0;33m'
B_YELLOW='\033[1;33m'
NC='\033[0m'

die() {
    echo -e "${RED}$@${NC}" >&2
    exit 1
}

error() {
  echo -e "${B_RED}[ERROR]${NC} ${RED}$@${NC}"
}

warn() {
  echo -e "${B_YELLOW}[WARN]${NC} ${YELLOW}$@${NC}"
}

info() {
    echo -e "${B_GREEN}[INFO]${NC} ${GREEN}$@${NC}"
}

realpath() {
  OURPWD=${PWD}
  cd "$(dirname "${1}")"
  LINK=$(readlink "$(basename "${1}")")
  while [ "${LINK}" ]; do
    cd "$(dirname "${LINK}")"
    LINK=$(readlink "$(basename "${1}")")
  done
  REALPATH="${PWD}/$(basename "${1}")"
  cd "${OURPWD}"
  echo "${REALPATH}"
}