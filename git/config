[init]
    defaultBranch = main
[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input
    editor = nvim
[alias]
    lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    st = status
    ctags = hook run ctags
[protocol]
    version = 2
[pull]
    rebase = true
[merge]
  tool = nvimdiff
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"
